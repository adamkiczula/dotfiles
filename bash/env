#
# Set en_US locale with UTF-8 encodings
#

LANG="en_US.UTF-8"
LANGUAGE="en"
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
export LANG LANGUAGE LC_CTYPE LC_ALL

#
# Paths
#

PATH="/usr/bin:/bin:/usr/sbin:/sbin"

if [ -d "/usr/local" ]; then
	PATH="/usr/local/bin:/usr/local/sbin:$PATH"
fi

if [ -d "/usr/local/share/npm/bin" ]; then
	PATH="/usr/local/share/npm/bin:$PATH"
fi

if [ -d "$HOME/.bin" ]; then
	PATH="$HOME/.bin:$PATH"
fi

MANPATH="/usr/share/man:/usr/local/share/man"

if [ -d "/usr/local/Cellar/node" ]; then
	NODE_PATH="/usr/local/lib/node_modules:$NODE_PATH"
fi

DROPBOX_PATH="$HOME/Dropbox"
PROJECTS_PATH="$HOME/Projects"

export PATH MANPATH NODE_PATH DROPBOX_PATH PROJECTS_PATH

#
# Editor and pager
#

EDITOR="subl"
PAGER="less -R"
LESSHISTFILE="-"
export EDITOR PAGER LESSHISTFILE

#
# Colors
#

CLICOLOR=1
GREP_OPTIONS="--color=auto"
GREP_COLOR="1;32"
export CLICOLOR GREP_OPTIONS GREP_COLOR

#
# Ruby
#

export RUBYLIB="lib:test:$RUBYLIB"

# From https://gist.github.com/1688857
# export RUBY_GC_MALLOC_LIMIT=60000000
# export RUBY_FREE_MIN=200000
export RUBY_GC_MALLOC_LIMIT=1000000000
export RUBY_FREE_MIN=500000
export RUBY_HEAP_MIN_SLOTS=40000

#
# Screen
#

if [ -n "$TMPDIR" ]; then
	SCREENDIR="$TMPDIR/.screen"
else
	SCREENDIR="$HOME/.screen"
fi

mkdir -p $SCREENDIR
chmod 0700 $SCREENDIR
export SCREENDIR

#
# Blolol
#

BLOLOL_GEMS_CREDENTIALS="$(keychain -s blolol-gems-production -u):$(keychain -s blolol-gems-production -p)"
BLOLOL_GEMS_APP_URL="https://blolol-gems-production.herokuapp.com/"
export BLOLOL_GEMS_CREDENTIALS BLOLOL_GEMS_APP_URL
