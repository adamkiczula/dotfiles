# Set locale and encoding
LANG="en_US.UTF-8"
LANGUAGE="en"
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
export LANG LANGUAGE LC_CTYPE LC_ALL

# Paths
PATH="/usr/bin:/bin:/usr/sbin:/sbin"

if [ -d "/usr/local" ]; then
  PATH="/usr/local/bin:/usr/local/sbin:$PATH"
fi

if [ -d "$HOME/.bin" ]; then
  PATH="$HOME/.bin:$PATH"
fi

if [ -d "/Applications/Postgres.app/Contents/Versions/9.4/bin" ]; then
  PATH="$PATH:/Applications/Postgres.app/Contents/Versions/9.4/bin"
fi

if [ -d "/Applications/Sublime Text.app/Contents/SharedSupport/bin" ]; then
  PATH="$PATH:/Applications/Sublime Text.app/Contents/SharedSupport/bin"
fi

export PATH

# Editor and pager
EDITOR="subl -w"
PAGER="less -R"
LESSHISTFILE="-"
export EDITOR PAGER LESSHISTFILE

# Colors
CLICOLOR=1
GREP_OPTIONS="--color=auto"
GREP_COLOR="1;32"
export CLICOLOR GREP_OPTIONS GREP_COLOR

# Ruby
export RUBYLIB="lib:test:$RUBYLIB"
export RUBY_GC_HEAP_INIT_SLOTS=600000
export RUBY_GC_HEAP_FREE_SLOTS=600000
export RUBY_GC_HEAP_GROWTH_FACTOR=1.25
export RUBY_GC_HEAP_GROWTH_MAX_SLOTS=300000
