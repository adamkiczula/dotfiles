#
# Set en_US locale with UTF-8 encodings
#

LANG="en_US.UTF-8"
LANGUAGE="en"
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
export LANG LANGUAGE LC_CTYPE LC_ALL

#
# Paths
#

PATH="/usr/bin:/bin:/usr/sbin:/sbin"

if [ -d "/usr/local" ]; then
	PATH="/usr/local/bin:/usr/local/sbin:$PATH"
fi

if [ -d "$HOME/.bin" ]; then
	PATH="$HOME/.bin:$PATH"
fi

MANPATH="/usr/share/man:/usr/local/share/man"

if [ -d "/usr/local/Cellar/node" ]; then
	NODE_PATH="/usr/local/lib/node_modules:$NODE_PATH"
fi

export PATH MANPATH NODE_PATH

#
# Editor and pager
#

EDITOR="mate"
PAGER="less -R"
LESSHISTFILE="-"
export EDITOR PAGER LESSHISTFILE

#
# Colors
#

CLICOLOR=1
GREP_OPTIONS="--color=auto"
GREP_COLOR="1;32"
export CLICOLOR GREP_OPTIONS GREP_COLOR

#
# Ruby
#

export RUBYLIB="lib:test:$RUBYLIB"

#
# Screen
#

if [ -z "$TMPDIR" ]; then
	SCREENDIR="$TMPDIR/.screen"
else
	SCREENDIR="$HOME/.screen"
fi

if [ ! -d "$SCREENDIR" ]; then
	mkdir -p $SCREENDIR
	chmod 0700 $SCREENDIR
fi

export SCREENDIR
