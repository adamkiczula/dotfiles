# Set locale and encoding
LANG="en_US.UTF-8"
LANGUAGE="en"
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
export LANG LANGUAGE LC_CTYPE LC_ALL

# Paths
PATH="/usr/bin:/bin:/usr/sbin:/sbin"

if [ -d '/usr/local' ]; then
  PATH="/usr/local/bin:/usr/local/sbin:$PATH"
fi

if [ -d "$HOME/.bin" ]; then
  PATH="$HOME/.bin:$PATH"
fi

if [ -d '/Applications/Postgres.app/Contents/Versions' ]; then
  postgres_bin_dir="$(find /Applications/Postgres.app/Contents/Versions -type d -name bin | head)"
  PATH="$PATH:$postgres_bin_dir"
fi

if [ -d '/Applications/MacVim.app/Contents/bin' ]; then
  PATH="$PATH:/Applications/MacVim.app/Contents/bin"
fi

if [ -d '/Applications/Sublime Text.app/Contents/SharedSupport/bin' ]; then
  PATH="$PATH:/Applications/Sublime Text.app/Contents/SharedSupport/bin"
fi

if [ -d "$HOME/Library/Python/3.7/bin" ]; then
  PATH="$HOME/Library/Python/3.7/bin:$PATH"
fi

export PATH

# Editor and pager
EDITOR=vim
PAGER="less -R"
LESSHISTFILE="-"
export EDITOR PAGER LESSHISTFILE

# Colors
CLICOLOR=1
GREP_OPTIONS="--color=auto"
GREP_COLOR="1;32"
export CLICOLOR GREP_OPTIONS GREP_COLOR
