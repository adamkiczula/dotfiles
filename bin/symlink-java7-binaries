#!/usr/bin/env bash
# Create symlinks to Java 7 binaries in /usr/local/bin, to be used alongside Apple's Java 6.

JAVA7_PATH="/Library/Internet Plug-Ins/JavaAppletPlugin.plugin/Contents/Home/bin"

if [ -d "$JAVA7_PATH" ]; then
	ln -sv "${JAVA7_PATH}/java" "/usr/local/bin/java7"
else
	echo "Error: Java is not installed at ${JAVA7_PATH}."
	exit 1
fi
